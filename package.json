{
  "name": "ember-batcher",
  "version": "3.0.0",
  "description": "Ember addon providing requestAnimationFrame utilities to properly batch reads/writes within Embers runloop.",
  "keywords": [
    "ember-addon",
    "viewport",
    "requestAnimationFrame"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-batcher/ember-batcher"
  },
  "license": "MIT",
  "author": "",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "lint:js": "eslint --ext ts,js .",
    "lint:hbs": "ember-template-lint .",
    "lint:ts": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json,{app,addon,config,tests}/**/*.{js,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@glimmer/env": "^0.1.7",
    "ember-cli-babel": "^7.7.3",
    "ember-cli-typescript": "^3.1.3",
    "ember-test-waiters": "^2.0.1"
  },
  "devDependencies": {
    "@ember/optional-features": "^0.7.0",
    "@types/ember": "^3.1.0",
    "@types/ember-qunit": "^3.4.6",
    "@types/ember-test-helpers": "^1.0.5",
    "@types/ember-testing-helpers": "^0.0.3",
    "@types/ember__test-helpers": "^0.7.8",
    "@types/qunit": "^2.9.0",
    "@types/rsvp": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-cli": "~3.11.0",
    "ember-cli-dependency-checker": "^3.1.0",
    "ember-cli-htmlbars": "^3.0.1",
    "ember-cli-htmlbars-inline-precompile": "^2.1.0",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-template-lint": "^1.0.0-beta.1",
    "ember-cli-typescript-blueprints": "^2.0.0",
    "ember-cli-uglify": "^3.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^2.0.0",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-qunit": "^4.4.1",
    "ember-resolver": "^7.0.0",
    "ember-source": "~3.16.0",
    "ember-source-channel-url": "^2.0.1",
    "ember-try": "^1.0.0",
    "ember-welcome-page": "^4.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-ember": "^8.1.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "loader.js": "^4.7.0",
    "prettier": "^1.18.2",
    "qunit-dom": "^0.9.2",
    "release-it": "^12.2.1",
    "release-it-lerna-changelog": "^1.0.3",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": "8.* || >= 10.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" --no-merges --perl-regexp --author=\"^((?!dependabot-preview).*)$\" ${latestTag}...HEAD"
    },
    "github": {
      "release": true
    }
  }
}
