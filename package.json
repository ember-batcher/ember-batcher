{
  "name": "ember-batcher",
  "version": "5.0.0",
  "description": "Ember addon providing requestAnimationFrame utilities to properly batch reads/writes within Embers runloop.",
  "keywords": [
    "ember-addon",
    "viewport",
    "requestAnimationFrame"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ember-batcher/ember-batcher"
  },
  "license": "MIT",
  "author": "",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:hbs lint:js lint:ts",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:ts": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "ember ts:precompile",
    "postpublish": "ember ts:clean",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "ember test",
    "test:all": "ember try:each"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json,{app,addon,config,tests}/**/*.{js,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ember/test-waiters": "^3.0.0",
    "@glimmer/env": "^0.1.7",
    "ember-cli-babel": "^7.26.11",
    "ember-cli-typescript": "^4.2.1"
  },
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@ember/test-helpers": "^2.7.0",
    "@embroider/test-setup": "^1.6.0",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "@types/ember": "^4.0.2",
    "@types/ember-qunit": "^5.0.2",
    "@types/ember-test-helpers": "^1.0.11",
    "@types/ember-testing-helpers": "^0.0.4",
    "@types/ember__test-helpers": "^2.8.2",
    "@types/qunit": "^2.9.0",
    "@types/rsvp": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^5.42.1",
    "broccoli-asset-rev": "^3.0.0",
    "ember-auto-import": "^2.4.3",
    "ember-cli": "~4.4.1",
    "ember-cli-dependency-checker": "^3.3.1",
    "ember-cli-htmlbars": "^6.0.1",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-cli-typescript-blueprints": "^2.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.0",
    "ember-load-initializers": "^2.1.2",
    "ember-page-title": "^7.0.0",
    "ember-qunit": "^5.1.5",
    "ember-resolver": "^8.0.3",
    "ember-source": "~4.4.0",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^4.18.0",
    "ember-try": "^2.0.0",
    "ember-welcome-page": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ember": "^10.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-qunit": "^7.2.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "qunit": "^2.19.1",
    "qunit-dom": "^2.0.0",
    "release-it": "^15.5.0",
    "release-it-lerna-changelog": "^5.0.0",
    "typescript": "^4.8.4",
    "webpack": "^5.72.1"
  },
  "engines": {
    "node": "14.* || 16.* || >= 18"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" --no-merges --perl-regexp --author=\"^((?!dependabot-preview).*)$\" ${latestTag}...HEAD"
    },
    "github": {
      "release": true
    }
  }
}
